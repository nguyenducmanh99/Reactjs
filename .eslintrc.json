{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard", "plugin:react/recommended", "plugin:prettier/recommended", "prettier" , "eslint:recommended",
    "plugin:react/recommended"],
    "overrides": [
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "sourceType": "module",
        "requireConfigFile": false, // <== ADD THIS
        "ecmaVersion": "latest" // Allows for the parsing of modern ECMAScript features
    },
    "plugins": [
        "react", "prettier"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "semi": [2, "always"]
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    },
    "root": false
}
